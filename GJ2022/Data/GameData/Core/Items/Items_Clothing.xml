          <EnumValue>SLOT_BODY</EnumValue>
        </Slots>
        <CoverFlags>
          <EnumValue>COVER_BODY</EnumValue>
        </CoverFlags>
      </Component_Equippable>
    </Components>
  </Entity>
  <!--Back Clothing-->
  <Entity Name="ClothingBase_Back" ParentName="ClothingBase" Abstract="true">
    <Components>
      <Component_Equippable>
        <Slots>
          <EnumValue>SLOT_BACK</EnumValue>
        </Slots>
      </Component_Equippable>
    </Components>
  </Entity>
  <!--Mask Clothing-->
  <Entity Name="ClothingBase_Mask" ParentName="ClothingBase" Abstract="true">
    <Components>
      <Component_Equippable>
        <Slots>
          <EnumValue>SLOT_MASK</EnumValue>
        </Slots>
        <CoverFlags>
          <EnumValue>COVER_MOUTH</EnumValue>
